{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd maison-luxe && npm install && npm run build",
    "watchPatterns": ["maison-luxe/**"]
  },
  "deploy": {
    "startCommand": "cd maison-luxe && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
